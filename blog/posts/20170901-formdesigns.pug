			.dialog
				width 100%

				@media (min-width 768px)
					width 50%

	.card.dialog.mx-auto
		.card-header._danger Log In
		.card-body
			.input-group.form-group
				span.input-group-addon
					+fa.user
				input.form-control( placeholder="Username" )
			.input-group.form-group
				span.input-group-addon
					+fa.key
				input.form-control(
					type = "password"
					placeholder = "Password"
				)
			.text-right
				button.btn.btn-primary Log In
				= " "
				button.btn.btn-success Register
			br
			small
				a( href = "#" ) Forgot your password?

	br

	.card.dialog.mx-auto
		.card-header._danger Register
		.card-body
			.form-group
				.input-group
					span.input-group-addon
						+fa.user
					input.is-valid.form-control( placeholder="Username" )
				.text-right
					small.text-success Username Available
			.form-group
				.input-group
					span.input-group-addon
						+fa.key
					input.form-control(
						placeholder = "Password"
						type = "password"
					)
				.progress.mt-1.mx-1( style = "height: .2em" )
					.progress-bar.bg-danger.w-25
				.text-right
					a(
						href = "#"
						data-toggle = "tooltip"
						title = "Consider adding more words."
					)
						small.text-danger
							u Weak Password
			.form-group
				.input-group
					span.input-group-addon
						+fa.envelope
					input.form-control(
						placeholder = "E-Mail"
						type = "email"
					)
			.text-right
				button.btn.btn-success Register
