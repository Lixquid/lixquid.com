body
    font-family Helvetica, Arial, sans-serif

#editor--toolbar
    position absolute
    // display block
    top 0
    left 0
    right 0
    box-sizing border-box

    height 2rem
    padding 0 .5rem

    line-height @height

    button
        padding .1rem .3rem
        margin 0 .1rem

#editor--statusbar
    position absolute
    // display block
    bottom 0
    left 0
    right 0
    box-sizing border-box

    height 1.5rem
    padding 0 .5rem

    font-size .9em
    line-height @height

.editor--section--right
    float right

#editor
    position absolute
    top 2rem
    left 0
    right 0
    bottom 1.5rem

#modal
    display none
    position fixed
    top 0
    left 0

    width 100%
    height 100%
    padding-top 5rem

    background #0009

    overflow auto
    z-index 10

    .modal--box
        width 80%
        padding 1rem
        margin auto

        background white

        box-radius 1rem
