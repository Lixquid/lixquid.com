@require "/resources/layouts/main/util/colors"

#svg--area
    width 100%
    height 400px

    border 1px solid #999

#svg--radiusrect
    fill none
    stroke black
    stroke-width 2px

#svg--radius
    fill $cGreen
    stroke black

#svg--from
    fill $cRed
    stroke black

#svg--to
    fill $cBlue
    stroke black

#svg--path
    fill none
    stroke black
    stroke-width 2px

.svg--code
    width 100%
    margin-bottom .5em

    font-family monospace
    font-size 1.5rem

    #svg--code--from,
    #svg--code--radius,
    #svg--code--to,
    #svg--code--rotation,
    #svg--code--large,
    #svg--code--sweep
        padding 0

        background none
        border none
        outline none

        line-height 1
        text-decoration underline

        cursor pointer

    #svg--code--from
        color $cRed
    #svg--code--radius
        color $cGreen
    #svg--code--to
        color $cBlue
    #svg--code--rotation,
    #svg--code--large,
    #svg--code--sweep
        color $cPurple

    #svg--input--from,
    #svg--input--radius,
    #svg--input--to,
    #svg--input--rotation
        display none

        width 4em
