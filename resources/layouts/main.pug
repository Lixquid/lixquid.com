extends /resources/layouts/base
include /resources/vendor/bootstrap/cssonly

append head
    link(
        rel = "stylesheet"
        href = ROOT + "/resources/layouts/main/main.css"
    )
append scripts
    script.
        // HACK: Terrible Horrible No-Good ES2016 module hack
        exports = {};
        function require() {};
    script(
        src = ROOT + "/resources/layouts/main/main.js"
    )

block body
    #main--container
        #main--header
            .main--header--detail
            a( href = ROOT + "/" )
                img#main--header--logo(
                    src = ROOT + "/resources/layouts/main/logo.png"
                    alt = "Lixquid"
                    width = 64
                    height = 64
                )
            .main--header--detail
        nav#main--nav
            ul
                li
                    a( href = ROOT + "/projects" ) Projects
                li
                    a( href = ROOT + "/gadgets" ) Gadgets
                //- Soon (TM)
                //- li
                //-     a( href = ROOT + "/blog" ) Blog
        main#main--body
            block main
        #main--footer
            #main--footer--quote Inspirational Quote
