                        "https://gitlab.com/lixquid/vue-localstorage-ref",
                        {
                            tags: ["TypeScript", "NPM", "Library"],
                            color: "#F7DF1E",
                            colorDark: true,
                            bgUrl: "/cards/typescript.png"
                        }
