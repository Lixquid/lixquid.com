<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        title Lixquid

        link(rel="stylesheet", href="/../node_modules/bootstrap/dist/css/bootstrap.min.css")
        link(rel="stylesheet", href="/../node_modules/@fortawesome/fontawesome-free/css/all.min.css")
        link(rel="stylesheet", href="/index.styl")
    body
        header.header--container
            .header--bg
            .header--content
                object.header--logo(data="/images/logo.svg", type="image/svg+xml")
                nav.header--links
                    mixin link(name, link, icon)
                        a(href=link, title=name)
                            i(class=`fab fa-${icon}`)
                            .sr-only= name
                    +link("GitLab", "https://gitlab.com/lixquid", "gitlab")
                    +link("GitHub", "https://github.com/lixquid", "github")
                    +link("Steam", "https://steamcommunity.com/lixquid", "steam")
                    +link("Discord (Lixquid#8008)", "https://discord.gg/PDjFHV9", "discord")
                    +link("Twitter", "https://twitter.com/lixquid", "twitter")
            .header--scrolldown
                i.fas.fa-chevron-down
            noscript
                style.
                    .header--bg {
                        opacity: 1 !important;
                        filter: blur(6px) !important;
                    }
        main.container.mx-auto.my-5
            //- Valid options:
            //-     tags: string[]
            //-     srcUrl: string
            //-     color: string
            //-     colorDark: boolean
            //-     bgUrl: string
            mixin card(title, url, options)
                .main--card(style=`
                    --card-color: ${options.color || "#666"};
                    --card-color-text: ${options.colorDark ? '#333' : 'white'};
                    ${options.bgUrl ? `--card-bg: url(${options.bgUrl})` : ""}
                `)
                    a.main--card--link(href=url)
                        .main--card--header
                            span= title
                        .main--card--content
                            block
                    .d-flex
                        .flex-grow-1
                            if options.tags
                                for tag in options.tags
                                    .main--card--tag.badge= tag
                        if options.srcUrl
                            a.main--card--source(href=options.srcUrl)
                                i.fas.fa-code
                                |
                                | Source Code

            .d-flex.js-only
                .btn-group(role="group")
                    button.btn.btn-secondary.active.card--layout--mason(title="Masonry Layout")
                        span.fas.fa-th-large
                        .sr-only Masonry Layout
                    button.btn.btn-secondary.card--layout--list(title="List Layout")
                        span.fas.fa-th-list
                        .sr-only List Layout
                .ml-3.flex-grow-1
                    .input-group
                        .input-group-prepend
                            span.input-group-text
                                span.fas.fa-search
                        input.form-control.card--search--input(
                            placeholder="Search"
                        )
                        .input-group-append
                            button.btn.btn-outline-danger.card--search--clear.d-none
                                span.fas.fa-times

            h1 Things I've made

            .row
                .col-md-6
                    +card(
                        "PowerShell Modules",
                        "https://gitlab.com/lixquid/powershell-modules",
                        {
                            tags: ["PowerShell", "Library"],
                            color: "#2C72C7",
                            bgUrl: "/cards/powershell.png"
                        }
                    )
                        span A collection of Powershell modules and utilities
                    +card(
