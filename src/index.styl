html,
body
    margin 0
    padding 0
    width 100%
    height 100%
    background #eee
    font-family Arial, Helvetica, sans-serif

.header--container
    position absolute
    overflow hidden
    width 100%
    height 100%

    .header--bg
        position absolute
        width 100%
        height 100%
        background url("/images/bg_light.png") center / cover
        filter blur(20px)
        opacity 0
        transition opacity 1s ease-in-out, filter 3s ease-in-out

    $logoSize = 30
    $smallViewportLogoSize = 50
    $logoCalc = "calc(min(%svw, %svh))"

    .header--content
        position absolute
        top 50%
        right 0
        left 0
        text-align center
        transform translateY(-50%)

    .header--logo
        width $logoCalc % ($logoSize $logoSize)
        height @width

    @media (max-width 700px), (max-height 700px)
        .header--logo
            width $logoCalc % ($smallViewportLogoSize $smallViewportLogoSize)
            height @width

    .header--links
        font-size 3rem

        a
            color #333

            &:hover
                color #666

            & + a
                margin-left 1rem

    .header--scrolldown
        position absolute
        right 0
        bottom 0.5rem
        left 0
        color #333
        text-align center
        font-size 2rem
        opacity 0.3
        animation-name header--scrolldown
        animation-duration 1s
        animation-timing-function ease-in-out
        animation-iteration-count infinite
        animation-direction alternate-reverse

        @keyframes header--scrolldown
            from
                opacity 0.3

            to
                opacity 0.5
